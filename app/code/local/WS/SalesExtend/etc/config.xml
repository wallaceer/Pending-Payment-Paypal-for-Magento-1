<config>
    <modules>
        <WS_SalesExtend>
            <version>1.0.0</version>
        </WS_SalesExtend>
    </modules>
    <global>
        <sales>
            <order>
                <states>
					<pending_payment translate="label">
                        <label>Pending Payment</label>
                        <statuses>
                            <pending_payment default="1"/>
                        </statuses>
                        <visible_on_front>1</visible_on_front>
                    </pending_payment>
                </states>
            </order>
        </sales>
    </global>
</config>
